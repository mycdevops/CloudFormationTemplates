{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "Classic Load Balancer with 2 EC2 instances (Free Tier eligible)",

  "Resources": {

    "EC2KeyPair": {
      "Type": "AWS::EC2::KeyPair",
      "Properties": {
        "KeyName": "key001"
      }
    },

    "ELBSecurityGroup": {
      "Type": "AWS::EC2::SecurityGroup",
      "Properties": {
        "GroupDescription": "Allow HTTP access",
        "VpcId": "vpc-08fc03a35716d207c",
        "SecurityGroupIngress": [
          {
            "IpProtocol": "tcp",
            "FromPort": 80,
            "ToPort": 80,
            "CidrIp": "0.0.0.0/0"
          }
        ]
      }
    },

    "EC2SecurityGroup": {
      "Type": "AWS::EC2::SecurityGroup",
      "Properties": {
        "GroupDescription": "Allow HTTP from ELB",
        "VpcId": "vpc-08fc03a35716d207c",
        "SecurityGroupIngress": [
          {
            "IpProtocol": "tcp",
            "FromPort": 80,
            "ToPort": 80,
            "SourceSecurityGroupId": { "Ref": "ELBSecurityGroup" }
          }
        ]
      }
    },

    "Instance1": {
      "Type": "AWS::EC2::Instance",
      "Properties": {
        "ImageId": "ami-0532be01f26a3de55",
        "InstanceType": "t3.micro",
        "SubnetId": "subnet-017b560008a88615b",
        "KeyName": { "Ref": "EC2KeyPair" },
        "SecurityGroupIds": [{ "Ref": "EC2SecurityGroup" }],
        "UserData": {
          "Fn::Base64": "#!/bin/bash\nyum install -y httpd\nsystemctl start httpd\nsystemctl enable httpd\necho \"WebServer 1\" > /var/www/html/index.html"
        }
      }
    },

    "Instance2": {
      "Type": "AWS::EC2::Instance",
      "Properties": {
        "ImageId": "ami-0532be01f26a3de55",
        "InstanceType": "t3.micro",
        "SubnetId": "subnet-076d3e991d473824b",
        "KeyName": { "Ref": "EC2KeyPair" },
        "SecurityGroupIds": [{ "Ref": "EC2SecurityGroup" }],
        "UserData": {
          "Fn::Base64": "#!/bin/bash\nyum install -y httpd\nsystemctl start httpd\nsystemctl enable httpd\necho \"WebServer 2\" > /var/www/html/index.html"
        }
      }
    },

    "ClassicLoadBalancer": {
      "Type": "AWS::ElasticLoadBalancing::LoadBalancer",
      "Properties": {
        "Subnets": [
          "subnet-017b560008a88615b",
          "subnet-076d3e991d473824b"
        ],
        "SecurityGroups": [
          { "Ref": "ELBSecurityGroup" }
        ],
        "Listeners": [
          {
            "LoadBalancerPort": "80",
            "InstancePort": "80",
            "Protocol": "HTTP"
          }
        ],
        "Instances": [
          { "Ref": "Instance1" },
          { "Ref": "Instance2" }
        ],
        "HealthCheck": {
          "Target": "HTTP:80/",
          "HealthyThreshold": "3",
          "UnhealthyThreshold": "5",
          "Interval": "30",
          "Timeout": "5"
        }
      }
    }
  },

  "Outputs": {
    "ELBDNSName": {
      "Description": "DNS Name of the Classic Load Balancer",
      "Value": {
        "Fn::GetAtt": ["ClassicLoadBalancer", "DNSName"]
      }
    }
  }
}
