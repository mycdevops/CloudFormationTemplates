{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "EC2 with Apache and S3 bucket with versioning enabled",
  "Parameters": {
    "SubnetId": {
      "Type": "AWS::EC2::Subnet::Id",
      "Description": "Subnet must belong to the required AZ"
    },
    "SecurityGroupId": {
      "Type": "AWS::EC2::SecurityGroup::Id",
      "Description": "Security Group ID for sgforcft"
    }
  },
  "Resources": {
    "EC2Instance": {
      "Type": "AWS::EC2::Instance",
      "Properties": {
        "ImageId": "ami-0532be01f26a3de55",
        "InstanceType": "t3.micro",
        "KeyName": "kpcft",
        "SubnetId": {
          "Ref": "SubnetId"
        },
        "SecurityGroupIds": [
          {
            "Ref": "SecurityGroupId"
          }
        ],
        "UserData": {
          "Fn::Base64": {
            "Fn::Join": [
              "",
              [
                "#!/bin/bash\n",
                "yum update -y\n",
                "yum install -y httpd\n",
                "systemctl start httpd\n",
                "systemctl enable httpd\n",
                "echo '<html><h1>Welcome to EC2 via CloudFormation Ex2</h1><p>Apache installed successfully</p></html>' > /var/www/html/index.html\n"
              ]
            ]
          }
        },
        "Tags": [
          {
            "Key": "Name",
            "Value": "EC2-CFT-Instance"
          }
        ]
      }
    },

    "MyS3Bucket": {
      "Type": "AWS::S3::Bucket",
      "Properties": {
        "BucketName": "myfirstbucket-0902",
        "VersioningConfiguration": {
          "Status": "Enabled"
        }
      }
    }
  },
  "Outputs": {
    "InstanceId": {
      "Description": "EC2 Instance ID",
      "Value": {
        "Ref": "EC2Instance"
      }
    },
    "BucketName": {
      "Description": "Created S3 Bucket Name",
      "Value": {
        "Ref": "MyS3Bucket"
      }
    }
  }
}
